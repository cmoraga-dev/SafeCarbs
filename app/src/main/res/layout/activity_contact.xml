<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main.contact.ContactActivity">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/design_default_color_surface"
        android:text="Contacto"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/scrollView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="376dp"
        android:layout_height="681dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:foregroundGravity="center_horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:layout_constraintVertical_bias="0.0">

        <androidx.gridlayout.widget.GridLayout
            android:id="@+id/grid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            app:columnCount="2">

            <Button
                android:id="@+id/btnMJEstay"
                android:onClick="onClick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:background="@android:color/transparent"
                android:drawableTop="@drawable/drawablefemicon"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:padding="25dp"
                android:scaleType="center"
                android:text="Nutricionista \n María José Estay"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                app:layout_column="0"
                app:layout_row="0" />


            <Button
                android:id="@+id/btnGDiaz"
                android:onClick="onClick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:background="@android:color/transparent"
                android:drawableTop="@drawable/drawablemalicon"
                android:drawablePadding="10dp"
                android:gravity="start|center_vertical"
                android:padding="25dp"
                android:scaleType="centerInside"
                android:text="Nutricionista \nGabriel Díaz"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                app:layout_column="1"
                app:layout_row="0" />

            <Button
                android:id="@+id/btnCAvila"
                android:onClick="onClick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:background="@android:color/transparent"
                android:drawableTop="@drawable/drawablefemicon"
                android:drawablePadding="10dp"
                android:gravity="start|center_vertical"
                android:padding="25dp"
                android:scaleType="centerInside"
                android:text="Nutricionista\nCamila Ávila"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                app:layout_column="0"
                app:layout_row="1" />

            <Button
                android:id="@+id/btnVFernandez"
                android:onClick="onClick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:background="@android:color/transparent"
                android:drawableTop="@drawable/drawablemalicon"
                android:drawablePadding="10dp"
                android:gravity="start|center_vertical"
                android:padding="25dp"
                android:scaleType="centerInside"
                android:text="Nutricionista\nVicente Fernández"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="12sp"
                app:layout_column="1"
                app:layout_row="1" />

            <Button
                android:id="@+id/btnMEscobar"
                android:onClick="onClick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:background="@android:color/transparent"
                android:drawableTop="@drawable/drawablemalicon"
                android:drawablePadding="10dp"
                android:gravity="start|center_vertical"
                android:padding="25dp"
                android:scaleType="centerInside"
                android:text="Nutricionista\nMoisés Escobar"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="12sp"
                app:layout_column="0"
                app:layout_row="2" />

            <Button
                android:id="@+id/btnJRuiz"
                android:onClick="onClick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:background="@android:color/transparent"
                android:drawableTop="@drawable/drawablefemicon"
                android:drawablePadding="10dp"
                android:gravity="start|center_vertical"
                android:padding="25dp"
                android:scaleType="centerInside"
                android:text="Nutricionista\nJaviera Ruiz"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="12sp"
                app:layout_column="1"
                app:layout_row="2" />

            <Button
                android:id="@+id/btnVPerez"
                android:onClick="onClick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:background="@android:color/transparent"
                android:drawableTop="@drawable/drawablefemicon"
                android:drawablePadding="10dp"
                android:gravity="start|center_vertical"
                android:padding="25dp"
                android:scaleType="centerInside"
                android:text="Nutricionista\nValentina Pérez"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="12sp"
                app:layout_column="1"
                app:layout_row="3" />


            <Button
                android:id="@+id/btnPCastillo"
                android:onClick="onClick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:background="@android:color/transparent"
                android:drawableTop="@drawable/drawablemalicon"
                android:drawablePadding="10dp"
                android:gravity="start|center_vertical"
                android:padding="25dp"
                android:scaleType="centerInside"
                android:text="Nutricionista\nPablo Castillo"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="12sp"
                app:layout_column="0"
                app:layout_row="3" />


            <Button
                android:id="@+id/btnEAcevedo"
                android:onClick="onClick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:background="@android:color/transparent"
                android:drawableTop="@drawable/drawablefemicon"
                android:drawablePadding="10dp"
                android:gravity="start|center_vertical"
                android:padding="25dp"
                android:scaleType="centerInside"
                android:text="Nutricionista\nEloísa Acevedo"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="12sp"
                app:layout_column="0"
                app:layout_row="4" />

            <Button
                android:id="@+id/btnBGonzalez"
                android:onClick="onClick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:background="@android:color/transparent"
                android:drawableTop="@drawable/drawablefemicon"
                android:drawablePadding="20dp"
                android:gravity="start|center_vertical"
                android:padding="25dp"
                android:scaleType="centerInside"
                android:text="Nutricionista\nBelén González"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                app:layout_column="1"
                app:layout_row="4" />

        </androidx.gridlayout.widget.GridLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>